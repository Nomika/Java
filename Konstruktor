package org.example;

public class KonstruktorUser {
    public String username;
    public String password;


    public KonstruktorUser(){
        System.out.println("Czesc z konstruktora");
    }

    public void sayHello() {
        System.out.println("Hello my name is " + username + " " + password);
    }

}


package org.example;

public class KonstruktorUserTest {
    public static void main(String[] args) {

        KonstruktorUser user = new KonstruktorUser();

        user.username = "Monika9";
        user.password = "Qwerty";
        user.sayHello();

    }
}
