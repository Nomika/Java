package org.example;

public class Konstruktor1 {
    public String username;
    public String surname;

    public Konstruktor1() {
    }

    public Konstruktor1(String user, String sur){
        System.out.println("Hello z konstruktora");
        username = user;
        surname = sur;
    }

    public void sayHello1() {
        System.out.println("Hello my name is " + username + " " + surname);
    }

}



package org.example;

public class Konstruktor1Test1 {
    public static void main(String[] args) {

        Konstruktor1 user = new Konstruktor1("Margaret", "Janson");

        user.sayHello1();


    }
}
